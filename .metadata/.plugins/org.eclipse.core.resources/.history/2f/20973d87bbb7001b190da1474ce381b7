package hello_world;
import java.util.*;

public class Barnabe_courses {

	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub

		double S;
		int mag=0;
		double inter;
		System.out.println("Veuillez saisir le montant que Barnabe posséde : ");
		Scanner sc=new Scanner(System.in);
		S=sc.nextDouble();
		
		
		do 
		{
		
			inter=(S/2)+1;
			S=S-inter;
			mag++;
			if (S<1)
			{
				
				mag++;
				
			}
			
		} while (S>1);
		
		System.out.println("Barnabé a visté : "+mag+"magasins");
		
	}

}
