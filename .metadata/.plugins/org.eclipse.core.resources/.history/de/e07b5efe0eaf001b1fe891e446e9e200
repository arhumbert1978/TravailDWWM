package hello_world;
import java.util.Scanner;
public class Bissextile {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
String rep;
String annee;
rep="o";
Boolean test2;

Scanner sc2= new Scanner(System.in);

do {
	System.out.println("Quelle année voulez-vous testez?");
	Scanner sc= new Scanner (System.in);
	
	annee = sc.nextLine();
	Integer test = Integer.valueOf(annee);
	
	if (test % 4 ==0)
	{
		
			if (test % 100 ==0)
			{
				if(test%400==0)
				{
					
					
					
		System.out.println("L'année est bissestile");
				}else { System.out.println("L'année n'est pas bissestile");}
				
			}else {System.out.println("L'année est bissestile");}
	}else {System.out.println("L'année n'est pas bissestile");}
				

	System.out.println("Voulez-vous continuez?");
	rep=sc2.nextLine().toLowerCase();
	
} while (rep.equals("o"));
	}

}
